<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="edu.temple.tuhub.MarketJobListingFragment">
    <TextView
        android:id="@+id/jobTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:text="New Job Listing"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textInputLayoutj6"
        android:layout_below="@+id/jobTitle"
        android:layout_alignParentStart="true">

        <AutoCompleteTextView
            android:id="@+id/editJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:hint="Listing Title"
            android:inputType="textPersonName"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textInputLayoutj6"
    android:id="@+id/textInputLayoutj7">

    <AutoCompleteTextView
        android:id="@+id/editJobDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textInputLayoutj6"
        android:ems="10"
        android:hint="Description"
        android:inputType="text"/>
</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputLayoutj7"
        android:id="@+id/textInputLayoutj8">

        <AutoCompleteTextView
            android:id="@+id/editJobPay"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textInputLayoutj7"
            android:ems="10"
            android:hint="Pay"
            android:inputType="numberDecimal"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputLayoutj8"
        android:id="@+id/textInputLayoutj9">


        <AutoCompleteTextView
            android:id="@+id/editHoursPerWeek"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Hours Per Week"
            android:inputType="numberDecimal"/>

    </android.support.design.widget.TextInputLayout>

    <edu.temple.tuhub.ImageScroller
        android:id="@+id/insert_job_image_scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>

